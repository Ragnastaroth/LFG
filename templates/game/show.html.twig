{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Games</h1>

    <section>
            <article>
                <h2>{{game.name}}</h2>
                <img src="{{ asset('assets/medias/img/upload_directory/' ~ game.img) }}" alt="A picture of the {{game.name}}">
                {% for genre in game.genreId %}
                <p>{{genre.name}}</p>
                {% endfor %}  
                <p>{{game.description}}</p>
            </article>
    </section>
    
    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
 